<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_amount"
        android:layout_toRightOf="@+id/editText_title"
        android:layout_marginLeft="23dp"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Note:"
        android:ems="10"
        android:layout_below="@+id/editText_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/editText_note" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_note"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="45dp"
        android:id="@+id/button_cancel" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_cancel"
        android:layout_toRightOf="@+id/editText_amount"
        android:layout_toEndOf="@+id/editText_amount"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:id="@+id/button_save" />
</RelativeLayout>