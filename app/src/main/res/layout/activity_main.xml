<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.brandeis.jjwang95.inminder.MainActivity">

    <Button
        android:text="Reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="101dp"
        android:id="@+id/reminder_button" />


    <Button
        android:text="Bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bill_button"
        android:layout_below="@+id/reminder_button"
        android:layout_alignLeft="@+id/reminder_button"
        android:layout_alignStart="@+id/reminder_button" />

    <Button
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bill_button"
        android:layout_alignLeft="@+id/bill_button"
        android:layout_alignStart="@+id/bill_button"
        android:id="@+id/password_button" />

</RelativeLayout>
