        <!--android:layout_height="wrap_content"-->
        <!--android:ems="20"-->
        <!--android:id="@+id/reminder_search_text"-->
        <!--android:layout_below="@+id/re_stopAlarm"-->
        <!--android:hint="Search on Google"-->
